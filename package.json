{
  "name": "calculator-api",
  "version": "1.0.0",
  "description": "Calculator API",
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "run-s clean",
    "build": "./node_modules/.bin/tsc -p tsconfig.json",
    "postinstall": "ts-node ./src/scripts/symbolic-links-generator.ts",
    "postbuild": "run-s prepare-lambda",
    "prepare-lambda": "ts-node ./src/scripts/lambda-build.ts",
    "test": "mocha -r ts-node/register \"test/**/*.spec.ts?(x)\" --timeout 300000",
    "test-coverage": "nyc --reporter=html npm test",
    "format-staged-files": "pretty-quick --staged",
    "ansible": "cd src/devops && ansible-playbook playbook-main.yaml && cd ../.."
  },
  "keywords": [
    "calculator"
  ],
  "author": "Igor V. Teixeira",
  "license": "ISC",
  "dependencies": {
    "joi": "^18.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.156",
    "@types/fs-extra": "^11.0.4",
    "@types/shelljs": "^0.8.17",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "chai": "^6.2.0",
    "fs-extra": "^11.3.2",
    "husky": "^9.1.7",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "npm-run-all": "4.1.5",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "shelljs": "^0.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "yargs": "^18.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ]
  }
}
